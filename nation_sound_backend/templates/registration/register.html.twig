{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}
    {{ form_errors(registrationForm.plainPassword) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        
        <div class="password-wrapper">
            {{ form_label(registrationForm.plainPassword.first) }}
            <div class="input-group">
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'password-input'}}) }}
                <button type="button" class="toggle-password" data-target=".password-input">
                    <i class="fas fa-eye-slash"></i>
                </button>
            </div>
        </div>

        <div class="password-wrapper">
            {{ form_label(registrationForm.plainPassword.second) }}
            <div class="input-group">
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'confirm-password-input'}}) }}
                <button type="button" class="toggle-password" data-target=".confirm-password-input">
                    <i class="fas fa-eye-slash"></i>
                </button>
            </div>
        </div>

        {{ form_row(registrationForm.agreeTerms) }}
        {{ form_row(registrationForm.turnstile) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}

    {{ include('legal/_cgu.html.twig') }}

    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    <script>
    // Activer le bouton apr√®s validation CAPTCHA
    function onTurnstileSuccess(token) {
        document.getElementById('submitBtn').disabled = false;
        document.querySelector('[name="cf-turnstile-response"]').value = token;
    }

    function onTurnstileError() {
        document.getElementById('submitBtn').disabled = true;
    }
    </script>

    <script>
            document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const target = document.querySelector(this.dataset.target);
                const icon = this.querySelector('i');
                
                target.type = target.type === 'password' ? 'text' : 'password';
                icon.classList.toggle('fa-eye-slash');
                icon.classList.toggle('fa-eye');
            });
        });
    </script>

    {% for flash_error in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ flash_error }} 
        <a href="{{ path('app_resend_verification', {'email': app.user.email}) }}">
            Renvoyer le lien
        </a>
    </div>
    {% endfor %}
{% endblock %}
